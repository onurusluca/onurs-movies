<h1>Results</h1>
<a href="/">Search Again</a>

<br>
<br>
<ul>
  <% data["Search"].forEach(movie => { %>
  <section>
    <strong><li><%= movie["Title"] %>(<%= movie["Year"] %>)</li></strong>
    <br />
    <img src="<%= movie["Poster"] %>" alt="">
  </section>
  <% }); %>
</ul>

<style>

    * {
        font-family:-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        background: rgb(165, 199, 241);
    }
  h1, a {
    text-align: center;
    margin: 0 auto;
  }

  li {
      width: 100%;
    overflow:hidden; 
    white-space:nowrap; 
    text-overflow: ellipsis;
  }
  ul {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
    margin: 0 auto;
    position: absolute;
    right: 0;
    left: -50px;

  }

  section {
  width: 40vh;
    margin: 2vh;
  }
</style>
